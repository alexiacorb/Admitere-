#include <iostream>

using namespace std;
int divizibil(int n,int c[1000]){
    int s=0;
    if(c[0]%5!=0){
        return 0;
    }
    for(int i=n-1;i>=0;i--){
        s=s+c[i];
    }
    if(s%3==0){
        return 1;
    }
    return 0;
}
int main()
{
    int n,c[1000]={};
    cin>>n;
    for(int i=n-1;i>=0;i--){
        cin>>c[i];
    }
    cout<<divizibil(n,c);
    return 0;
}
